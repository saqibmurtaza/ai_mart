{
  "name": "ai_mart_1",
  "version": "1.0.0",
  "description": "Root of the AI Mart monorepo containing web-frontend and sanity-studio workspaces.",
  "private": true,
  "packageManager": "pnpm@10.14.0",

  "workspaces": [
    "web-frontend",
    "sanity-studio"
  ],

  "scripts": {

    "dev:web":   "pnpm --filter web-frontend dev",
    "build:web": "pnpm --filter web-frontend build",
    "start:web": "pnpm --filter web-frontend start",
    "lint:web":  "pnpm --filter web-frontend lint",

    "dev:studio":   "pnpm --filter sanity-studio dev",
    "build:studio": "pnpm --filter sanity-studio build",

    "install:all": "pnpm install"
  },

  "devDependencies": {
    "typescript": "5.8.3"
  }
}
